<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="boot.sagu.mapper.CategoryMapperInter">
	<select id="getParentCategory" resultType="category">
		SELECT category_id, name FROM categories WHERE parent_id IS NULL
	</select>
	<select id="getChildCategory" parameterType="int" resultType="category">
    	SELECT category_id, name FROM categories WHERE parent_id = #{parentId}
	</select>
</mapper>